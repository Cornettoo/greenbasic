{% schema %}
	{
		"name": "Tekst",
		"settings": [
			{
				"type": "radio",
				"id": "space_top",
				"label": "Ruimte boven",
				"options": [
					{ "value": "large", "label": "Groot" },
					{ "value": "medium", "label": "Medium" },
					{ "value": "small", "label": "Klein" },
					{ "value": "none", "label": "Geen" }
				],
				"default": "none"
			},
			{
				"type": "radio",
				"id": "space_bottom",
				"label": "Ruimte onder",
				"options": [
					{ "value": "large", "label": "Groot" },
					{ "value": "medium", "label": "Medium" },
					{ "value": "small", "label": "Klein" },
					{ "value": "none", "label": "Geen" }
				],
				"default": "none"
			},
			{
				"type": "checkbox",
				"id": "center",
				"label": "Tekst centreren"
			},
			{
				"type": "radio",
				"id": "title_tag",
				"label": "Titel tag",
				"options": [
					{ "value": "h2", "label": "H2" },
					{ "value": "h3", "label": "H3" },
					{ "value": "h4", "label": "H4" },
					{ "value": "h5", "label": "H5" }
				],
				"default": "h2"
			},
			{
				"type": "text",
				"id": "title",
				"label": "Titel"
			},
			{
				"type": "richtext",
				"id": "text",
				"label": "Tekst"
			}
		],
		"presets": [
			{
				"category": "Secties",
				"name": "Tekst"
			}
		]
	}
{% endschema %}

<section class="section p-t--{{ section.settings.space_top }} p-b--{{ section.settings.space_bottom }}">
	<div class="container">
		<div class="text text--mw {% if section.settings.center %}center{% endif %}">
			<{{ section.settings.title_tag }}>{{ section.settings.title }}</{{ section.settings.title_tag }}>
			<p>{{ section.settings.text }}</p>
		</div>
	</div>
</section>