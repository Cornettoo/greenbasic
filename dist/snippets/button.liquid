{% if text != blank %}
	{% if style != blank %}
		{%- assign style = style -%}
	{% else %}
		{%- assign style = 'primary' -%}
	{% endif %}
	<a class="button button--{{ style }} {{ class }}" href="{{ url }}" aria-label="{{ description }}">
		{{ text }}
		<i class="icon icon-arrow"></i>
	</a>
{% endif %}