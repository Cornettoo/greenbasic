<div class="add-to-cart">

	<form action="/cart/add" enctype="multipart/form-data" id="AddToCartForm" method="post">
		{% if product.tags contains 'Op maat te bestellen' %}
			<div class="input">
				<label for="breedte"><span>Breedte in mm</span> (min. 100mm, max. 2030mm)</label>
				<input id="breedte" type="text" placeholder="Vul de breedte in">
			</div>
		
			<div class="input">
				<label for="lengte"><span>Lengte in mm</span> (min. 100mm, max. 3050mm)</label>
				<input id="lengte" type="text" placeholder="Vul de lengte in">
			</div>
		{% endif %}

		<div class="add-to-cart__submit">
			<input id="quantity" min="1" name="quantity" type="number" value="1">
			<button id="AddToCart" class="button button--primary" name="add" type="submit"><i class="icon-cart"></i> In mijn winkelwagen</button>
		</div>
	</form>
</div>