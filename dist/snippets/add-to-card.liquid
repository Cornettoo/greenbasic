<div class="add-to-cart">
	{% if ifInCollection != blank %}
		<div class="input">
			<label for="breedte">
				<span>Breedte in mm</span>
				(min. 100mm, max. 2030mm)
			</label>
			<input id="product_width" name="width" placeholder="Vul de breedte in" type="text">
		</div>

		<div class="input">
			<label for="lengte">
				<span>Lengte in mm</span>
				(min. 100mm, max. 3050mm)
			</label>
			<input id="product_length" name="length" placeholder="Vul de lengte in" type="text">
		</div>
	{% endif %}

	

	<div id="add-to-cart" class="add-to-cart__submit" data-variant-id="{{ product.selected_or_first_available_variant.id  }}" data-inventory="{{ product.variants.first.inventory_quantity }}">
		<input id="quantity" min="1" name="quantity" type="number" value="1">
		<button class="button button--primary" name="add" type="submit"><i class="icon-cart"></i>In mijn winkelwagen</button>
	</div>
</div>