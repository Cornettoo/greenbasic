<div class="tags">
	{% if customHandle != blank %}
		<a href="{{ collections[customHandle].url }}" class="label">
			{{ collections[customHandle].title }}
		</a>
	{% else %}
		{% for tag in product.tags %}
			<a href="/collections/all/{{ tag | handleize }}" class="label">
				{{ tag }}
			</a>
		{% endfor %}
	{% endif %}
</div>