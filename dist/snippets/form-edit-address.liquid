{% form 'customer_address', address %}
	{% render 'form-messages' %}

	<div class="form__row">
		<div class="form__field">
			<label for="address_first_name_new">Voornaam</label>
			<input type="text" id="address_first_name_new" class="address_form" name="address[first_name]" value="{{ address.first_name }}">
		</div>
		<div class="form__field">
			<label for="address_last_name_new">Achternaam</label>
			<input type="text" id="address_last_name_new" class="address_form" name="address[last_name]" value="{{ address.last_name }}">
		</div>
	</div>
	
	<div class="form__row">
		<div class="form__field">
			<label for="address_phone_new">Telefoonnummer</label>
			<input type="tel" id="address_phone_new" class="address_form" name="address[phone]" value="{{ address.phone }}">
		</div>
		<div class="form__field">
			<label for="address_company_new">Bedrijfsnaam</label>
			<input type="text" id="address_company_new" class="address_form" name="address[company]" value="{{ address.company }}">
		</div>
	</div>

	<div class="form__row">
		<div class="form__field">
			<label for="address_address1_new">Adres</label>
			<input type="text" id="address_address1_new" class="address_form" name="address[address1]" value="{{ address.address1 }}">
		</div>
		<div class="form__field">
			<label for="address_zip_new">Postcode</label>
			<input type="text" id="address_zip_new" class="address_form" name="address[zip]" autocapitalize="characters" value="{{ address.zip }}">
		</div>
	</div>


	<div class="form__row">
		<div class="form__field">
			<label for="address_city_new">Plaats</label>
			<input type="text" id="address_city_new" class="address_form" name="address[city]" value="{{ address.city }}">
		</div>
		<div class="form__field">
			<label for="address_country_new">Land</label>
			<div class="form__field__select">
				<input type="text" value="{{ address.country }}">
				<select id="address_country_new" name="address[country]">
					{{ country_option_tags }}
				</select>
			</div>
		</div>
	</div>

	{% unless default %}
		<p>
			<input type="checkbox" id="address_default_address_53942408644{{ checkboxId }}" name="address[default]" value="1">
			<label for="address_default_address_53942408644{{ checkboxId }}" class="inline">Gebruik dit adres als standaard</label>
		</p>
	{% endunless %}

	<button class="button button--primary" type="submit">Opslaan</button>
{% endform %}