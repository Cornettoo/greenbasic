<a class="block {{ class }}" href="{{ product.url | within: collection }}" aria-label="Navigeer naar {{ product.title }}">
	<picture>
		<img src="{{ product.featured_image | img_url: 'medium' }}" alt="{{ product.featured_image.alt }}">
	</picture>
	<h3>{{ product.title }}</h3>

	<div class="price">
		{% if product.compare_at_price %}
			<span class="price--old">{{ product.price | money }}</span>
			<span>{{ product.compare_at_price_max | money }}</span>
		{% else %}
			<span>{{ product.price | money }}</span>
		{% endif %}
	</div>
</a>