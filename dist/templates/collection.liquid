<section class="section p-t--small p-b--small">
	<div class="container">
		<div class="text text--mw">
			<h1>{{ collection.title }}</h1>
			{{ collection.description }}
		</div>
	</div>
</section>

<section class="section section-filter">
	<div class="container">
		<div class="row">
			<div class="col-12">
				<div id="usf_container"></div>
			</div>
			<aside class="col-12 col-md-4 col-lg-3">
				{% include 'filter' %}
			</aside>
			
			<div class="col-12 col-md-8 col-lg-9">
				<div class="row blocks">
					{% paginate collection.products by 30 %}
						{% for product in collection.products %}
							<div class="col-6 col-lg-4">
								{% include 'block', product: product,
									class: 'block--product' 
								%}
							</div>
						{% else %}
							<p>no matches</p>
						{% endfor %}
			
						{% if paginate.pages > 1 %}
							{{ paginate | default_pagination }}
						{% endif %}
					{% endpaginate %}
				</div>

			</div>
		</div>

	</div>
</section>

{% section "ordering_process" %}

