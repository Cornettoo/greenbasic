<section class="section p-t--small p-b--medium">
   <div class="container">
		<div class="container__small">
			<h1>Registreren</h1>
			{% form 'create_customer', class: 'form' %} 
				{{ form.errors | default_errors }}
			
				<div class="form__row">
					<div class="form__field">
						<label class="hide" for="first_name">Voornaam</label>
						<input required="true" type="text" value="" name="customer[first_name]" placeholder="Voornaam" />
					</div>
				</div>
			
				<div class="form__row">
					<div class="form__field">
						<label class="hide" for="last_name">Last Name</label>
						<input required="true" type="text" value="" name="customer[last_name]" placeholder="Achternaam" />
					</div>
				</div>
			
				<div class="form__row">
					<div class="form__field">
						<label class="hide" for="email">Email Address</label>
						<input required="true" type="email" value="" name="customer[email]" placeholder="E-mailadres" />
					</div>
				</div>
			
				<div class="form__row">
					<div class="form__field">
						<label class="hide" for="password">Password</label>
						<input required="true" type="password" value="" name="customer[password]" placeholder="Wachtwoord" />
					</div>
				</div>
			
				<button type="submit" class="button button--primary">Registreren</button>
			{% endform %} 
		</div>
   </div>
</section>


