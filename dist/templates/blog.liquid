{% section 'header-block' %}

<section class="section p-b--large">
	<div class="container">
		<div class="row article__wrapper">
			
			{%- assign articles = blog.articles -%}
			{% paginate blog.articles by 12 %}

				{% for article in articles %}
					<div class="col-sm-6 col-md-4">
						<a href="{{ article.url }}" class="article" aria-label="Navigeer naar {{ article.title }}">
							<div class="label">{{ article.published_at | date: '%d-%m-%Y' }}</div>
							<img src="{{ article.image | img_url: 'large' }}" alt="{{ article.image.alt }}">
							<h3>{{ article.title | escape }}</h3>
						</a>
					</div>
				{% endfor %}

				{%- if paginate.pages > 1 -%}
					{% include 'pagination', paginate: paginate %}
				{%- endif -%}

			{% endpaginate %}

		</div>
	</div>
</section>