<section class="section p-t--small p-b--small">
	<div class="container">
		<div class="section__heading">
			<h1>Je zocht naar '{{ search.terms | escape }}'</h1>
		</div>
		
		<div class="row">
			{% paginate search.results by 32 %}
				{% if search.performed %}
					{% for item in search.results %}
						<div class="col-6 col-md-4 col-lg-3">
							{% include 'block', product: item,
								class: 'block--product' 
							%}
						</div>
					{% else %}
						{% include 'search-empty' %}
					{% endfor %}
				{% else %}
						{% include 'search-empty' %}
				{% endif %}

				{%- if paginate.pages > 1 -%}
					<div class="col-12 m-t--small">
						{% include 'pagination' %}
					</div>
				{% endif %}
			{% endpaginate %}
		</div>
	</div>
</section>