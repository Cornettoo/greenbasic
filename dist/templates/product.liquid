{%- assign content = product.description | split: '-split-' -%}

<section class="section text p-t--small p-b--small">
   <div class="container">
      <h1 class="h2">{{ product.title }}</h1>
      <label for=""></label>
   </div>
</section>

<section class="product">
   <div class="container">
      <div class="row">
         <div class="col col-md-6 product__slider">
				<div class="swiper-container slider-top">
					<div class="swiper-wrapper">
						{% for image in product.images %}
							{%- assign imageAlt = image.alt | split: '|' -%}
							{%- assign imageAltTextLast = imageAlt[1] | downcase | remove: ' ' -%}
							<div class="swiper-slide {{ imageAltTextLast }}">
								<img src="{{ image.src | img_url: '600x600', scale: 2 }}" alt="{{ imageAlt[0] | escape }}"  {% if imageAltTextLast == 'fullscreen' %}class="fullscreen"{% endif %}>
							</div>
						{% endfor %}	
					</div>
				</div>
				
            <div class="swiper-container slider-thumbs">
               <div class="swiper-wrapper">
						{% for image in product.images %}
							<div class="swiper-slide">
								<img src="{{ image.src | img_url: 'compact' }}" alt="{{ image.alt | escape }}">
							</div>
						{% endfor %}
               </div>
            </div>
         </div>

         <div class="col col-md-6">
				{{ product.metafields.global.shipping }}
